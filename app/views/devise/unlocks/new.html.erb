<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, class: 'form-signin' }) do |f| %>
  	<h2 class="form-signin-heading">Unlock account</h2>
	
	<p class="link-text" >To reset your password, please enter the address you used to register. If you do not see the confirmation email in your mailbox, please check your spam folder.</p>
  	<%= f.full_error :unlock_token %>

  	<div class="form-inputs">
    	<%= f.input :email, placeholder: 'Email Address',  :label => false, input_html: { class: 'form-control form-single',  } %>
  	</div>

  	<div class="form-actions">
    	<%= f.button :submit, "Unlock", class: 'btn btn-primary btn-lg btn-block btn-cust-blue btn-cust' %>
  	</div>
	<%= render "devise/shared/links" %>
<% end %>