<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=> { class: 'form-signin' }) do |f| %>
	<h2 class="form-signin-heading">Please login</h2>

	<div class="form-inputs">
		<%= f.input :email, :required => true, placeholder: 'Email Address',  :label => false, input_html: { class: 'form-control form-top validate-presence validate-regex' } %>
		<%= f.input :password, :required => true, placeholder: 'Password',  :label => false, input_html: { class: 'form-control form-bottom validate-presence validate-length' } %>
		<%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, 'Sign In', class: 'btn btn-primary btn-lg btn-block btn-cust-blue btn-cust'%>
	</div>
	<hr>
	<%= render "devise/shared/links" %>
<% end %>

<script>
    $( document ).ready( function(){
                new leave();

                new presence();
                new regex();
                new length();

                // Disable button
                $('input[name="commit"]').prop("disabled",true);
            }
    );
</script>