<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=> { class: 'form-signin' }) do |f| %>
	<h2 class="form-signin-heading">Please sign up</h2>

	<div class="form-inputs">
		<%= f.input :name, placeholder: 'Name', :label => false, :autofocus => true,
                    input_html: { class: 'form-control form-top validate-presence', :'data-myvalid' => 'true' } %>
		<%= f.input :email, placeholder: 'Email Address',  :label => false,
                    input_html: { class: 'form-control form-middle validate-presence validate-regex', :'data-unique' => '/users/validate', :'data-myvalid' => 'true' } %>
		<%= f.input :password, placeholder: 'Password',  :label => false,
                    input_html: { class: 'form-control form-middle validate-presence validate-length', :'data-myvalid' => 'true' } %>
		<%= f.input :password_confirmation, placeholder: 'Password Confirmation',  :label => false,
                    input_html: { class: 'form-control form-bottom validate-length validate-match', :'data-myvalid' => 'true' } %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, "Sign Up", class: 'btn btn-primary btn-lg btn-block btn-cust-blue btn-cust' %>
	</div>
	<hr>
	<%= render "devise/shared/links" %>
<% end %>

<script>
    $( document ).ready( function(){
                new leave();

                new unique();
                new presence();
                new length();
                new regex();
                new match();

                // Disable button
                $('input[name="commit"]').prop("disabled",true);
            }
    );
</script>




