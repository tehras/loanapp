<%= simple_form_for(@patient) do |f| %>
    <%= f.error_notification %>
    <div class="portlet portlet-default" style="margin-top:30px">
      <div class="portlet-heading">
        <div class="portlet-title">
          <h4>New Patient</h4>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="row portlet-body" style="margin-right:0px;margin-left:0px">
        <div id="basicFormExample" class="panel-collapse in" style="height: auto;">
          <div>
            <div class="col-lg-6">
              <h5>GENERAL INFORMATION:</h5>
              <%= f.input :first_name, :label => false, input_html: {class: "form-control", id: "first_name"}, :placeholder => "First Name" %>
              <%= f.input :last_name, :label => false, input_html: {class: "form-control", id: "last_name"}, :placeholder => "Last Name" %>
              <%= f.input :email, :label => false, input_html: {class: "form-control", id: "email"}, :placeholder => "Email" %>
              <h5>PHONE NUMBERS:</h5>
              <%= f.input :home_phone, :label => false, input_html: {class: "form-control", id: "home_phone"}, :placeholder => "Home Phone" %>
              <%= f.input :mobile_phone, :label => false, input_html: {class: "form-control", id: "mobile_phone"}, :placeholder => "Mobile Phone" %>
              <%= f.input :fax_number, :label => false, input_html: {class: "form-control", id: "fax_number"}, :placeholder => "Fax Number" %>
              <h5>ADDRESS:</h5>
              <%= f.input :street, :label => false, input_html: {class: "form-control", id: "street"}, :placeholder => "Street" %>
              <%= f.input :city, :label => false, input_html: {class: "form-control", id: "city"}, :placeholder => "City" %>
              <%= f.input :state, :label => false, input_html: {class: "form-control", id: "state"}, :placeholder => "State" %>
              <%= f.input :zip, :label => false, input_html: {class: "form-control", id: "zip"}, :placeholder => "Zip" %>

            </div>
            <div class="col-lg-6">
              <h5>OTHER INFORMATION:</h5>
              <%= f.input :nationality, :label => false, input_html: {class: "form-control", id: "nationality"}, :placeholder => "Nationality" %>
              <%= f.input :languages_spoken, :label => false, input_html: {class: "form-control", id: "languages"}, :placeholder => "Languages" %>
              <%= f.input :reasons_for_service, :label => false, input_html: {class: "form-control", id: "reasons_service"}, :placeholder => "Reasons For Service" %>
              <%= f.input :type_of_service, :label => false, input_html: {class: "form-control", id: "types_service"}, :placeholder => "Types of Service" %>
              <%= f.input :requires_car, :as => :boolean, :label => false, :inline_label => true %>
              <%= f.input :require_HHA, :as => :boolean, :label => false, :inline_label => true %>
              <%= f.input :required_services, :label => false, input_html: {class: "form-control", id: "require_services", style:"height:200px"}, :placeholder => "Require Servces" %>
            </div>
            <div class="col-lg-12">
            <div class="form-actions" align="center">
              <%= f.button :submit, :class=>"btn-success" %>
            </div>
              </div>
          </div>

        </div>

      </div>
    </div>
<% end %>

