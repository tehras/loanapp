<%= simple_form_for(@employee) do |f| %>
    <%= f.error_notification %>
    <div class="portlet portlet-default" style="margin-top:30px">
      <div class="portlet-heading">
        <div class="portlet-title">
          <h4>New Employee</h4>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="row portlet-body" style="margin-right:0px;margin-left:0px">
        <div id="basicFormExample" class="panel-collapse in" style="height: auto;">
          <div>
            <div class="col-lg-6">
              <h5>GENERAL INFORMATION:</h5>
              <%= f.input :first_name, :label => false, input_html: {class: "form-control", id: "first_name"}, :placeholder => "First Name" %>
              <%= f.input :last_name, :label => false, input_html: {class: "form-control", id: "last_name"}, :placeholder => "Last Name" %>
              <%= f.input :email, :label => false, input_html: {class: "form-control", id: "email"}, :placeholder => "Email" %>
              <h5>PHONE NUMBERS:</h5>
              <%= f.input :home_number, :label => false, input_html: {class: "form-control", id: "home_phone"}, :placeholder => "Home Phone" %>
              <%= f.input :mobile_number, :label => false, input_html: {class: "form-control", id: "mobile_phone"}, :placeholder => "Mobile Phone" %>
              <%= f.input :fax_number, :label => false, input_html: {class: "form-control", id: "fax_number"}, :placeholder => "Fax Number" %>

              <h5>ADDRESS:</h5>
              <%= f.input :street, :label => false, input_html: {class: "form-control", id: "street"}, :placeholder => "Street" %>
              <%= f.input :city, :label => false, input_html: {class: "form-control", id: "city"}, :placeholder => "City" %>
              <%= f.input :state, :label => false, input_html: {class: "form-control", id: "state"}, :placeholder => "State" %>
              <%= f.input :zip, :label => false, input_html: {class: "form-control", id: "zip"}, :placeholder => "Zip" %>

            </div>
            <div class="col-lg-6">
              <h5>OTHER INFORMATION:</h5>
              <%= f.input :nationality, :label => false, input_html: {class: "form-control", id: "nationality"}, :placeholder => "Nationality" %>
              <%= f.input :language, :label => false, input_html: {class: "form-control", id: "languages"}, :placeholder => "Languages" %>
              <%= f.input :english, :label => false, input_html: {class: "form-control", id: "english"}, :placeholder => "English Quality (1-10)" %>
              <%= f.input :years_inUs, :label => false, input_html: {class: "form-control", id: "years_in_us"}, :placeholder => "Years in US" %>
              <%= f.input :hha_lic, :label => false, input_html: {class: "form-control", id: "hha_lic"}, :placeholder => "HHA License" %>
              <%= f.input :driver_lic, :as => :boolean, :label => false, :inline_label => true %>
              <%= f.input :access_toCar, :as => :boolean, :label => false, :inline_label => true %>
              <%= f.input :notes, input_html: {class: "form-control", id: "notes", style:"height:200px"}, :placeholder => "Notes" %>
            </div>
            <div class="col-lg-12">
              <div class="form-actions" align="center">
                <%= f.button :submit, :class => "btn-success" %>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>
<% end %>